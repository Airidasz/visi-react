{
    "env": {
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": [
            0
        ],
        "react/react-in-jsx-scope": "off",
        "no-loss-of-precision": "off",
        "no-unsafe-optional-chaining": "off",
        "no-useless-backreference": "off",
        "no-nonoctal-decimal-escape": "off",
        "no-unused-vars":"warn",
        "no-empty":"off",
        // allow jsx syntax in js files (for next.js project)
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ], //should add ".ts" if typescript project
        "no-unreachable" :[1],
        "indent": [
            "error",
            2, { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}